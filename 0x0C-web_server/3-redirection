#!/usr/bin/env bash
# Install, configure, and start the server
apt-get update
apt-get -y install nginx
ufw allow 'Nginx HTTP'
mkdir -p /var/www/html/
chmod -R 755 /var/www
echo 'Hello World!' > /var/www/html/index.html

# Define Nginx server configuration
SERVER_CONFIG="
server {
	listen 80 default_server;
	listen [::]:80 default_server;
	root /var/www/html;
	index index.html index.htm index.nginx-debian.html;
	server_name _;
	location / {
		try_files \$uri \$uri/ =404;
	}
	if (\$request_filename ~ redirect_me){
		rewrite ^ https://sketchfab.com/bluepeno/models permanent;
	}
}"

# Write server configuration to Nginx config file
echo "$SERVER_CONFIG" > /etc/nginx/sites-enabled/default

# Check if Nginx is running and start/restart accordingly
if [ "$(pgrep -c nginx)" -le 0 ]; then
	service nginx start
else
	service nginx restart
fi
